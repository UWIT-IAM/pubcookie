/* 
 * pbc_path.h, The pubcookie path.
 *
 * So that we can just #include this file instead of having to 
 * worry about shell escapes and whatnot.
 * 
 */

#ifndef PBC_PATH_H
#define PBC_PATH_H

#define PBC_PATH (libpbc_config_getstring("pbc_path", "@prefix@/"))
/* the login server builds it's key Filenames from the hostname     */
#if defined (WIN32)
#  define PBC_KEY_DIR (AddSystemRoot("\\inetsrv\\pubcookie\\keys"))
#else
#  define PBC_KEY_DIR (libpbc_config_getstring("keydir", "@prefix@/keys"))
#endif

/* where the runtime configuration file lives */
#define PBC_CONFIG "@prefix@/config"

/* Where to find templates */
#define TMPL_FNAME (libpbc_config_getstring("template_root", "@prefix@/login_templates"))

/* file to get the list of ok browsers from */
#define OK_BROWSERS_FILE (libpbc_config_getstring("ok_browsers", "@prefix@/ok_browsers"))

/* file to get browser information from */
#define BROWSERS_FILE (libpbc_config_getstring("browsers", "@prefix@/browsers"))

/* getcred authz file */
#define GETCRED_AUTHZ (libpbc_config_getstring("getcred_authz_file", "@prefix@/getcred_authz"))

/* The keyclient.  This is probably better defined elsewhere, but I dunno. */

#define KEYCLIENT (libpbc_config_getstring("keyclient", "@prefix@/keyclient"))

#endif
